<%= form_tag(restaurants_path, :method => "get", id: "search-form") do %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>
  </div>

  <div class="field">
    <%= label_tag :address %>
    <%= text_area_tag :address, params[:address] %>
  </div>

  <div class="field">
    <%= label_tag :min_food_count %>
    <%= text_field_tag :min_food_count, params[:min_food_count] %>
  </div>

  <div class="field">
    <%= label_tag :max_food_count %>
    <%= text_field_tag :max_food_count, params[:max_food_count] %>
  </div>

  <div class="actions">
    <%= submit_tag "Search", :name => nil %>
  </div>
<% end %>
