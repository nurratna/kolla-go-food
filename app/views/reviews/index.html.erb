<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <% @reviews.each do |review| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td><%= review.name %></td>
      <td><%= review.title %></td>
      <td><%= review.description %></td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Review', new_review_path %>
