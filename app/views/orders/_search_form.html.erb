<%= form_tag(orders_path, :method => "get", id: "search-form") do %>
  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>
  </div>

  <div class="field">
    <%= label_tag :address %>
    <%= text_area_tag :address, params[:address] %>
  </div>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :payment_type %>
    <%= select_tag :payment_type, options_for_select(Order.payment_types.keys, params[:payment_type]), prompt: "Select payment type"%>
  </div>

  <div class="field">
    <%= label_tag :min_total_price %>
    <%= text_field_tag :min_total_price, params[:min_total_price] %>
  </div>

  <div class="field">
    <%= label_tag :max_total_price %>
    <%= text_field_tag :max_total_price, params[:max_total_price] %>
  </div>

  <div class="actions">
    <%= submit_tag "Search", :name => nil %>
  </div>
<% end %>
